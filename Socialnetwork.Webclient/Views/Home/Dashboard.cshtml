@model IEnumerable<Socialnetwork.Webclient.Models.ThumbnailPostViewModel>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "";
}
<head>
    <link rel="stylesheet" href="~/css/main.css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400" rel="stylesheet">

</head>
<partial name="_UserPostArea" />

@foreach (ThumbnailPostViewModel thumb in Model)
{
    <partial name="_DashboardPostPartial" , model="thumb" />
}



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.ns-autogrow/1.1.6/jquery.ns-autogrow.min.js"></script>
<script>
    $("#postTextArea").autogrow();

    function answer(value)
    {
        $.get("/Home/AnswerPost/" + value, {},
            function (response) {
                $('.post' + value).after(response);

            })
        $.get("/Home/GetNumberOfAnswer/" + value, {},
            function (response) {
                $('.post' + value).after(response);

            })
    }

    function reply(value)
    {
        $('.post' + value).slideUp();
    }


</script>