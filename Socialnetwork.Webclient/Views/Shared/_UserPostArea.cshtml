
<div class="postUserContainer">
    <div class="postUserImage userPostGridItem"><img src="http://chittagongit.com//images/default-user-icon/default-user-icon-8.jpg"></div>
    <div class="userPostGridItem userPostTextArea"><textarea id="postTextArea" rows="1" placeholder="What are you doing right now ?"></textarea></div>
    <div class="userPostGridItem UserPostTagArea"><textarea id="tagtextarea" rows="1" placeholder="@@Tag' user and #Post"></textarea></div>
    <div class="userPostGridItem buttonPost"><button id="Postmsg">Post</button></div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $(function () {

            $(document).on('click', '#Postmsg', function () {
                
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CreateNew", "RecentPosts")',
                    dataType: "json",
                    data: { PostContent: $('#postTextArea').val()},
                    success: function (response) {
                        if (response == true) {
                            location.reload();
                        }
                    }
                });
            });
        });
    });




               
       
</script>