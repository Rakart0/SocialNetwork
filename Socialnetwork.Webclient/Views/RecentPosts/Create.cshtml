@model Socialnetwork.Webclient.Models.CreateEditPostViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CreatePostViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" asp-controller="RecentPosts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostContent" class="control-label"></label>
                <input id="postContent" asp-for="PostContent" class="form-control" />
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input asp-for="Images" multiple accept="image/x-png,image/gif,image/jpeg"/>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>