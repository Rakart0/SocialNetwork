@model IEnumerable<Socialnetwork.Webclient.Models.UserFollowViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            
            @if (User.Identity.IsAuthenticated)
            {
            <td>
                @if (item.isFollowedByLoggedUser == false)
                {
                    @Html.ActionLink("Follow", "Follow", new { id = item.userId })
                }
                else
                {    
                    @Html.ActionLink("Unfollow", "Unfollow", new { id = item.userId })
                }

            </td>
            <td>
                @if (item.isFollowingLoggedUser == true)
                {
                    <p>Is following you</p>
                }
                else
                {
                    <p>Is not  following you</p>
                }
            </td>
            }
            </tr>
}
    </tbody>
</table>
